pipeline {
    // Agent
    agent any

    // Outils (JDK et Maven)
    tools {
        jdk 'JDK21' // Doit correspondre au nom configurÃ© dans Jenkins
        maven 'Maven3' // Doit correspondre au nom configurÃ© dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Cloning repository...'
                // Utilisation de l'URL HTTPS complÃ¨te
                git branch: 'main', url: 'https://github.com/rirou11/devops.git'
            }
        }
        
        // NOUVEAU STAGE : ExÃ©cution des tests unitaires
        stage('Test') {
            steps {
                echo 'ğŸ§ª Running Maven tests...'
                // Se dÃ©placer dans le sous-dossier oÃ¹ se trouve le pom.xml
                dir('DevOps-main') {
                    // ExÃ©cute la phase 'test' de Maven. S'il y a un Ã©chec, le pipeline s'arrÃªte ici.
                    sh 'mvn test' 
                }
            }
        }

        stage('Build & Package') {
            steps {
                echo 'âš™ï¸ Running Maven build and packaging JAR...'
                dir('DevOps-main') {
                    // Utiliser 'package' pour compiler et crÃ©er le fichier JAR/WAR
                    sh 'mvn clean package -U' 
                }
            }
        }

        // NOUVEAU STAGE : Archivage des artefacts
        stage('Archive Artifacts') {
            steps {
                echo 'ğŸ“¦ Archiving artifacts...'
                dir('DevOps-main') {
                    // Sauvegarde le fichier JAR gÃ©nÃ©rÃ©. Il sera accessible sur la page du build.
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Pipeline completed successfully! Artifact archived.'
        }
        failure {
            echo 'âŒ Pipeline failed â€” check console output for details.'
        }
    }
