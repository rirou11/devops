pipeline {
    agent any

    tools {
        // Assurez-vous que l'outil Maven 'maven3' est configur√© dans Jenkins
        maven 'maven3'
    }

    environment {
        // Remplacez 'rirou11' par votre nom d'utilisateur Docker Hub si n√©cessaire
        DOCKERHUB_REPO = "rirou11/student-management"
        IMAGE_NAME = "student-management"
        // Le tag de l'image sera l'ID du build Jenkins
        IMAGE_TAG = "${env.BUILD_ID}"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo "üì• Clonage du d√©p√¥t Git..."
                checkout scm
            }
        }

        stage('Build Maven & Package') {
            steps {
                echo "‚öôÔ∏è Ex√©cution du package Maven..."
                // L'ex√©cution se fait dans le sous-dossier contenant le pom.xml
                dir('DevOps-main') {
                    sh "mvn clean package -DskipTests"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Construction de l'image Docker..."
                // L'ex√©cution se fait dans le sous-dossier contenant le Dockerfile
                dir('DevOps-main') {
                    // Utilisation de l'IMAGE_TAG pour versionner l'image
                    sh "docker build -t ${DOCKERHUB_REPO}:${IMAGE_TAG} ."
                    // Ajout du tag 'latest'
                    sh "docker tag ${DOCKERHUB_REPO}:${IMAGE_TAG} ${DOCKERHUB_REPO}:latest"
                }
            }
        }

        stage('Push Docker Image to Hub') {
            steps {
                echo "üì§ Pouss√©e de l'image vers Docker Hub..."
                // Utilise les identifiants configur√©s dans Jenkins sous l'ID 'docker-hub-credentials'
                // NOTE: Cette √©tape va √©chouer jusqu'√† ce que les identifiants soient configur√©s.
                dir('DevOps-main') {
                    withCredentials([string(credentialsId: 'docker-hub-credentials', variable: 'DOCKER_PASSWORD')]) {
                        // Connexion
                        sh "echo ${DOCKER_PASSWORD} | docker login -u rirou11 --password-stdin"
                        // Push des deux tags
                        sh "docker push ${DOCKERHUB_REPO}:${IMAGE_TAG}"
                        sh "docker push ${DOCKERHUB_REPO}:latest"
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Succ√®s : Pipeline termin√© avec succ√®s."
        }
        failure {
            echo "‚ùå √âchec : Le pipeline a √©chou√©. Veuillez v√©rifier les logs ci-dessus."
        }
    }
}
