pipeline {
    // Agent
    agent any

    // Outils (JDK et Maven)
    tools {
        jdk 'JDK21'
        maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                git branch: 'main', url: 'https://github.com/rirou11/devops.git'
            }
        }
        
        // NOUVEAU STAGE : Ex√©cution des tests unitaires
        stage('Test') {
            steps {
                echo 'üß™ Running Maven tests...'
                // Se d√©placer dans le bon r√©pertoire
                dir('DevOps-main') {
                    // Ex√©cute la phase 'test' de Maven
                    sh 'mvn test' 
                }
            }
        }

        stage('Build') {
            steps {
                echo '‚öôÔ∏è Running Maven build...'
                dir('DevOps-main') {
                    // Utiliser 'package' au lieu de 'compile' pour g√©n√©rer le JAR/WAR
                    // La phase 'package' inclut toujours 'clean' et 'compile'.
                    sh 'mvn clean package -U' 
                }
            }
        }

        // NOUVEAU STAGE : Archivage des artefacts
        stage('Archive') {
            steps {
                echo 'üì¶ Archiving artifacts...'
                dir('DevOps-main') {
                    // Sauvegarde le fichier JAR g√©n√©r√© dans le dossier 'target'
                    // Le nom du fichier est 'student-management-0.0.1-SNAPSHOT.jar'
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully! Artifact archived.'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check console output for details.'
        }
    }
}
