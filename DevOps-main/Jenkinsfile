pipeline {
    // Agent
    agent any

    // Outils (JDK et Maven)
    tools {
        jdk 'JDK21' // Doit correspondre au nom configur√© dans Jenkins
        maven 'Maven3' // Doit correspondre au nom configur√© dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                // Utilisation de l'URL HTTPS compl√®te
                git branch: 'main', url: 'https://github.com/rirou11/devops.git'
            }
        }
        
        // STAGE DE TEST MODIFI√â POUR LE DIAGNOSTIC
        stage('Test (Skipped)') {
            steps {
                echo 'üß™ Running Maven Compile & SKIPPING tests for diagnostic...'
                // Se d√©placer dans le sous-dossier o√π se trouve le pom.xml
                dir('DevOps-main') {
                    // Compilation seule : -DskipTests permet d'ignorer les tests unitaires
                    sh 'mvn clean compile -DskipTests -U' 
                }
            }
        }

        stage('Build & Package') {
            steps {
                echo '‚öôÔ∏è Running Maven package and building JAR...'
                dir('DevOps-main') {
                    // Le packaging (cr√©ation du JAR) : -DskipTests permet d'ignorer les tests unitaires
                    sh 'mvn package -DskipTests' 
                }
            }
        }

        // --- NOUVEAUX STAGES DOCKER AJOUT√âS ICI ---
        
        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                dir('DevOps-main') {
                    // La commande 'docker build' utilise le Dockerfile pr√©sent dans ce r√©pertoire
                    // NOM DE L'IMAGE: rayhana123/student-management:BUILD_ID
                    sh "docker build -t rayhana123/student-management:${env.BUILD_ID} ."
                    // Ajout du tag 'latest'
                    sh "docker tag rayhana123/student-management:${env.BUILD_ID} rayhana123/student-management:latest"
                }
            }
        }
        
        stage('Push Docker Image to Hub') {
            steps {
                // Utilise le credential 'docker-hub-credentials'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    echo 'üöÄ Pushing Docker image to Docker Hub...'
                    
                    // 1. Connexion √† Docker Hub
                    sh "echo \"$DOCKER_PASSWORD\" | docker login -u \"$DOCKER_USERNAME\" --password-stdin"
                    
                    // 2. Pousser les deux tags
                    sh "docker push rayhana123/student-management:${env.BUILD_ID}"
                    sh "docker push rayhana123/student-management:latest"
                    
                    sh 'docker logout' // 3. D√©connexion
                }
            }
        }

        // --- FIN DES NOUVEAUX STAGES DOCKER ---

        stage('Archive Artifacts') {
            steps {
                echo 'üì¶ Archiving artifacts...'
                dir('DevOps-main') {
                    // Sauvegarde le fichier JAR g√©n√©r√©.
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully! Artifact archived.'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check console output for details.'
        }
    }
}
