pipeline {
    agent any

    // Configuration des outils globaux
    tools {
        // CORRECTION 1: 'Maven3' doit √™tre utilis√© (sensible √† la casse)
        // et doit correspondre au nom configur√© dans 'Manage Jenkins -> Global Tool Configuration'.
        maven 'Maven3'
    }

    environment {
        // Variables pour Docker Hub
        DOCKERHUB_REPO = "rirou11/student-management"
        IMAGE_NAME = "student-management"
        // Le tag de l'image est l'ID du build Jenkins (unique)
        IMAGE_TAG = "${env.BUILD_ID}"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo "üì• Clonage du d√©p√¥t Git..."
                // R√©cup√®re le code du d√©p√¥t sp√©cifi√© dans la configuration du job
                checkout scm
            }
        }

        stage('Build Maven & Package') {
            steps {
                echo "‚öôÔ∏è Ex√©cution du package Maven..."
                // Le pipeline assume que le code source est dans un sous-dossier 'DevOps-main'
                dir('DevOps-main') {
                    // Utilisation de l'outil Maven configur√©
                    sh "mvn clean package -DskipTests"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Construction de l'image Docker..."
                dir('DevOps-main') {
                    // Construction de l'image avec le tag BUILD_ID
                    sh "docker build -t ${DOCKERHUB_REPO}:${IMAGE_TAG} ."
                    // Ajout du tag 'latest'
                    sh "docker tag ${DOCKERHUB_REPO}:${IMAGE_TAG} ${DOCKERHUB_REPO}:latest"
                }
            }
        }

        stage('Push Docker Image to Hub') {
            steps {
                echo "üì§ Pouss√©e de l'image vers Docker Hub..."
                dir('DevOps-main') {
                    // CORRECTION 2 & S√âCURIT√â : Utilise un credential de type 'Username with password' 
                    // dont l'ID est 'docker-hub-credentials'
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASSWORD')]) {
                        
                        // Connexion s√©curis√©e en utilisant les variables inject√©es
                        sh "echo ${DOCKER_PASSWORD} | docker login -u ${DOCKER_USER} --password-stdin"
                        
                        // Push des deux tags
                        sh "docker push ${DOCKERHUB_REPO}:${IMAGE_TAG}"
                        sh "docker push ${DOCKERHUB_REPO}:latest"
                    }
                    // D√©connexion (optionnel, mais bonne pratique)
                    sh "docker logout"
                }
            }
        }
    }

    // Actions apr√®s la fin du pipeline
    post {
        success {
            echo "‚úÖ Succ√®s : Pipeline termin√© avec succ√®s. Images pouss√©es √† Docker Hub."
        }
        failure {
            echo "‚ùå √âchec : Le pipeline a √©chou√©. Veuillez v√©rifier le log, notamment les identifiants Docker Hub."
        }
        always {
            // CORRECTION : Le bloc 'always' doit contenir une section 'steps' ou une action.
            steps {
                 // D√©commenter l'action pour le nettoyage local
                 sh "docker rmi ${DOCKERHUB_REPO}:${IMAGE_TAG} || true" 
            }
        }
    }
