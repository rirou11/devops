pipeline {
    agent any

    tools {
        // Assurez-vous que 'Maven3' est le nom exact de votre configuration Maven dans Jenkins
        maven 'Maven3'
    }

    environment {
        // Variables pour Docker Hub
        DOCKERHUB_REPO = "rirou11/student-management"
        IMAGE_NAME = "student-management"
        IMAGE_TAG = "${env.BUILD_ID}"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo "üì• Clonage du d√©p√¥t Git..."
                checkout scm
            }
        }

        stage('Build Maven & Package') {
            steps {
                echo "‚öôÔ∏è Ex√©cution du package Maven..."
                dir('DevOps-main') {
                    sh "mvn clean package -DskipTests"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Construction de l'image Docker..."
                dir('DevOps-main') {
                    // Utilise le Dockerfile simple et stable
                    sh "docker build -t ${DOCKERHUB_REPO}:${IMAGE_TAG} ."
                    sh "docker tag ${DOCKERHUB_REPO}:${IMAGE_TAG} ${DOCKERHUB_REPO}:latest"
                }
            }
        }

        stage('Push Docker Image to Hub') {
            steps {
                echo "üì§ Pouss√©e de l'image vers Docker Hub..."
                dir('DevOps-main') {
                    // Utilisation s√©curis√©e du credential 'docker-hub-credentials'
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASSWORD')]) {
                        
                        // Connexion (Le mot de passe doit √™tre VALIDE dans Jenkins)
                        sh "echo ${DOCKER_PASSWORD} | docker login -u ${DOCKER_USER} --password-stdin"
                        
                        // Push des deux tags
                        sh "docker push ${DOCKERHUB_REPO}:${IMAGE_TAG}"
                        sh "docker push ${DOCKERHUB_REPO}:latest"
                    }
                    // D√©connexion
                    sh "docker logout"
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Succ√®s : Pipeline termin√© avec succ√®s. Images pouss√©es √† Docker Hub."
        }
        failure {
            echo "‚ùå √âchec : Le pipeline a √©chou√©. Veuillez v√©rifier le log, notamment les identifiants Docker Hub."
        }
        always {
            // Correction de syntaxe : Pas de bloc 'steps {}' ici.
            echo "Nettoyage termin√©."
        }
    }
}
