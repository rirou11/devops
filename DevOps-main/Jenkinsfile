pipeline {
    // Agent
    agent any

    // Outils (JDK et Maven)
    tools {
        jdk 'JDK21' // Doit correspondre au nom configur√© dans Jenkins
        maven 'Maven3' // Doit correspondre au nom configur√© dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                // Utilisation de l'URL HTTPS compl√®te
                git branch: 'main', url: 'https://github.com/rirou11/devops.git'
            }
        }
        
        // STAGE DE TEST MODIFI√â POUR LE DIAGNOSTIC
        stage('Test (Skipped)') {
            steps {
                echo 'üß™ Running Maven Compile & SKIPPING tests for diagnostic...'
                // Se d√©placer dans le sous-dossier o√π se trouve le pom.xml
                dir('DevOps-main') {
                    // Compilation seule : -DskipTests permet d'ignorer les tests unitaires
                    sh 'mvn clean compile -DskipTests -U' 
                }
            }
        }

        stage('Build & Package') {
            steps {
                echo '‚öôÔ∏è Running Maven package and building JAR...'
                dir('DevOps-main') {
                    // Le packaging (cr√©ation du JAR) : -DskipTests permet d'ignorer les tests unitaires
                    sh 'mvn package -DskipTests' 
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo 'üì¶ Archiving artifacts...'
                dir('DevOps-main') {
                    // Sauvegarde le fichier JAR g√©n√©r√©.
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully! Artifact archived.'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check console output for details.'
        }
    }
}
