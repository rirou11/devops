pipeline {
    // Agent
    agent any

    // Outils (V√©rifiez que ces noms correspondent √† votre configuration Jenkins)
    tools {
        jdk 'JDK21'
        maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                // CORRECTION 1: Utilisation de l'URL HTTPS compl√®te
                git branch: 'main', url: 'https://github.com/rirou11/devops.git'
            }
        }

        stage('Build') {
            steps {
                echo '‚öôÔ∏è Running Maven build...'
                // CORRECTION 2: Se d√©placer dans le sous-r√©pertoire 'DevOps-main'
                // o√π se trouve le pom.xml pour que Maven puisse le trouver.
                dir('DevOps-main') {
                    sh 'mvn clean compile -U'
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build completed successfully!'
        }
        failure {
            echo '‚ùå Build failed ‚Äî check console output for details.'
        }
    }
}
