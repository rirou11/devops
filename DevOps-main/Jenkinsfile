pipeline {
    // Agent
    agent any

    // Outils (JDK et Maven)
    // Assurez-vous que 'JDK21' et 'Maven3' sont configur√©s dans Jenkins > G√©rer Jenkins > Outils.
    tools {
        jdk 'JDK21'
        maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                // CORRECTION : Utilisation de l'URL HTTPS compl√®te
                git branch: 'main', url: 'https://github.com/rirou11/devops.git'
            }
        }
        
        // NOUVEAU STAGE : Ex√©cution des tests unitaires
        stage('Test') {
            steps {
                echo 'üß™ Running Maven tests...'
                // CORRECTION : N√©cessaire pour naviguer dans le sous-dossier o√π se trouve le pom.xml
                dir('DevOps-main') {
                    // Ex√©cute la phase 'test' de Maven
                    sh 'mvn test' 
                }
            }
        }

        stage('Build & Package') {
            steps {
                echo '‚öôÔ∏è Running Maven build and packaging JAR...'
                dir('DevOps-main') {
                    // Utiliser 'package' pour compiler et cr√©er le fichier JAR/WAR
                    sh 'mvn clean package -U' 
                }
            }
        }

        // NOUVEAU STAGE : Archivage des artefacts
        stage('Archive Artifacts') {
            steps {
                echo 'üì¶ Archiving artifacts...'
                dir('DevOps-main') {
                    // Sauvegarde le fichier JAR g√©n√©r√© dans le dossier 'target'
                    // Le nom du fichier est bas√© sur le pom.xml (e.g., student-management-0.0.1-SNAPSHOT.jar)
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully! Artifact archived.'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check console output for details.'
        }
    }
}
